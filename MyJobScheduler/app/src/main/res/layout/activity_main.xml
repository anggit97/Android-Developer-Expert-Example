<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_16"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.anggitprayogo.dicoding.myjobscheduler.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click the start button to start the weather task or click the cancel button to cancel the weather task"
        android:layout_marginBottom="@dimen/dimen_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Start"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_check_scheduler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check is scheduler running"/>
</LinearLayout>